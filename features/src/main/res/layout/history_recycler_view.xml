<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/company"
        app:layout_constraintTop_toTopOf="parent"
       app:cardCornerRadius="30dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spacex"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/image"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Website_"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:id="@+id/website_"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/company"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/website"
        android:text="@string/Website"
        android:padding="5dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/website_"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/company"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitter_"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="@string/Twitter_"
        app:layout_constraintTop_toBottomOf="@id/website_"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitter"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/twitter_"
        android:textSize="20sp"
        android:padding="5dp"
        android:text="@string/Twitter"
        app:layout_constraintTop_toBottomOf="@id/website_"
        />

</androidx.constraintlayout.widget.ConstraintLayout>